<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="body" prefHeight="560.0" prefWidth="850.0" styleClass="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.module03_basicgui_db_interface.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="213.0" layoutY="62.0" prefHeight="448.0" prefWidth="445.0" styleClass="login-container" stylesheets="@styling/styleForSplash.css">
         <opaqueInsets>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </opaqueInsets>
         <children>
            <Label styleClass="title-label" stylesheets="@styling/styleForSplash.css" text="Sign In">
               <font>
                  <Font size="28.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </opaqueInsets>
            </Label>
            <Label stylesheets="@styling/styleForSplash.css" text="Email">
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="username" styleClass="text-field" stylesheets="@styling/styleForSplash.css">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <Label stylesheets="@styling/styleForSplash.css" text="Password">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="password" styleClass="text-field" stylesheets="@styling/styleForSplash.css">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#login" styleClass="login-button" stylesheets="@styling/styleForSplash.css" text="Login">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="incorrectPassword">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <VBox prefHeight="139.0" prefWidth="445.0">
               <children>
                  <Label fx:id="registerText" text="Don't have an account?" />
                  <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#register" text="Register">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
    <stylesheets>
        <URL value="@styling/styleForSplash.css" />
    </stylesheets>
</AnchorPane>
